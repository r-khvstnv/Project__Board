<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/mWhite"
    tools:context=".fragments.IntroFragment">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/app_name"
        android:textColor="@color/mGreen"
        android:textSize="44sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <ImageView
        android:id="@+id/intro_icon"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginHorizontal="@dimen/dim_login_margin_horizontal"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_brainstorm"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/get_started"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/st_get_started"
        android:textSize="28sp"
        android:textColor="@color/mBlack"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/intro_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/st_intro_description"
        android:textSize="18sp"
        android:textColor="@color/mBlue"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintTop_toBottomOf="@id/get_started"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <LinearLayout
        android:id="@+id/ll_log_in"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_login_height"
        android:layout_marginHorizontal="@dimen/dim_login_margin_horizontal"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/bg_rectangle_green_solid"
        app:layout_constraintTop_toBottomOf="@id/description"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/st_login"
            android:textSize="@dimen/dim_login_text_size"
            android:textColor="@color/mWhite"
            android:textAllCaps="false"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_sign_up"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_login_height"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="@dimen/dim_login_margin_horizontal"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/bd_rectangle_green_stroke"
        app:layout_constraintTop_toBottomOf="@id/ll_log_in"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/st_sign_up"
            android:textSize="@dimen/dim_login_text_size"
            android:textColor="@color/mGreen"
            android:textAllCaps="false"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>