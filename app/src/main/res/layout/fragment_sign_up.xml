<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/mWhite"
    tools:context=".fragments.SignUpFragment">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="@dimen/dim_signup_back_size"
        android:layout_height="@dimen/dim_signup_back_size"
        android:layout_marginTop="@dimen/dim_signup_title_margin"
        android:layout_marginStart="@dimen/dim_signup_title_margin"
        android:src="@drawable/ic_back"
        android:scaleType="fitCenter"
        app:tint="@color/mDarkGreen"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dim_signup_back_size"
        android:layout_marginStart="@dimen/dim_signup_back_size"
        android:text="@string/st_sign_up"
        android:textColor="@color/mDarkGreen"
        android:textAllCaps="true"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_back"
        app:layout_constraintLeft_toRightOf="@id/iv_back"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/name"
        style="@style/MyEditTextOutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_back"
        android:layout_margin="@dimen/dim_signup_edit_text_margin"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLength="50"
            android:inputType="textCapWords"
            android:hint="@string/st_name"
            android:textAlignment="viewEnd"
            android:textCursorDrawable="@color/mEditTextColor"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/email"
        style="@style/MyEditTextOutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:layout_margin="@dimen/dim_signup_edit_text_margin"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLength="50"
            android:inputType="textEmailAddress"
            android:hint="@string/st_email"
            android:textAlignment="viewEnd"
            android:textCursorDrawable="@color/mEditTextColor"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password"
        style="@style/MyEditTextOutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email"
        android:layout_margin="@dimen/dim_signup_edit_text_margin"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLength="50"
            android:inputType="textPassword"
            android:hint="@string/st_password"
            android:textAlignment="viewEnd"
            android:textCursorDrawable="@color/mEditTextColor"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/confirm_password"
        style="@style/MyEditTextOutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password"
        android:layout_margin="@dimen/dim_signup_edit_text_margin"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLength="50"
            android:inputType="textPassword"
            android:hint="@string/st_confirm_password"
            android:textAlignment="viewEnd"
            android:textCursorDrawable="@color/mEditTextColor"
            />
    </com.google.android.material.textfield.TextInputLayout>


    <LinearLayout
        android:id="@+id/ll_sign_up"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_login_height"
        android:layout_marginHorizontal="@dimen/dim_signup_edit_text_margin"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/bg_rectangle_green_solid"
        app:layout_constraintTop_toBottomOf="@id/confirm_password"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/st_sign_up"
            android:textSize="@dimen/dim_login_text_size"
            android:textColor="@color/mWhite"
            android:textAllCaps="false"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>